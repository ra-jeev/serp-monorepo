{
  "name": "@serp/db",
  "version": "1.0.0",
  "description": "The DB package for the monorepo",
  "type": "module",
  "exports": {
    "./validations": "./src/validations/index.ts",
    "./queries/*": "./src/queries/*.ts",
    "./schema/*": "./src/schema/*.ts",
    "./client": "./src/client.ts"
  },
  "scripts": {
    "lint": "eslint . --ext .ts",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "tsx ./scripts/seedDb.ts"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "pg": "^8.16.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@serp/eslint-config": "workspace:*",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.5",
    "drizzle-zod": "^0.8.3",
    "tsx": "^4.20.6"
  }
}
